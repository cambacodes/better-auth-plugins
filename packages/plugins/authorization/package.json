{
  "name": "@cambacodes/authorization",
  "version": "1.0.0",
  "description": "CASL-based authorization plugin for Better Auth",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build",
    "publish:public": "bun publish --access=public"
  },
  "keywords": [
    "better-auth",
    "authorization",
    "casl",
    "permissions",
    "rbac"
  ],
  "author": "Cambacodes",
  "license": "MIT",
  "peerDependencies": {
    "better-auth": "^1.0.0-canary.14"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "mustache": "^4.2.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.2.21",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.3.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.2.4"
  }
}
